- @page_title = t '.page_title', :vehicle_title => @vehicle.title

= form_for([:admin, @vehicle], :url => clear_do_admin_vehicle_path(@vehicle), :html => { :class => 'form-horizontal' }) do |f|
  = render :partial => 'partials/form_errors', :locals => { :resource => @vehicle, :locale_scope => 'admin.vehicles.form' }

  .control-group
    .controls
      - %w{ way_points movements reports activities fuel_changes }.each do |field|  
        %label.checkbox
          = check_box_tag(field) + t(".field.#{field}")

  .form-actions
    = f.submit t('.button.clear'), :class => 'btn btn-danger', 'data-confirm' => t('.button.confirm_clear')
    = link_to t('.button.back'), admin_vehicle_path(@vehicle), :class => 'btn'
