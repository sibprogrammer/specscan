- @page_title = t '.page_title'

- content_for :sidebar_actions do
  - if can? :manage, Vehicle
    %li= link_to t('.action.add_vehicle'), new_admin_vehicle_path

%table.bordered-table.zebra-striped
  %thead
    %tr
      %th= t '.column.imei'
      %th= t '.column.reg_number'
      - if can? :manage, User
        %th= t '.column.owner'

  %tbody
    - @vehicles.each do |vehicle|
      %tr
        %td= link_to vehicle.imei, admin_vehicle_path(vehicle)
        %td= vehicle.reg_number
        - if can? :manage, User
          %td= link_to vehicle.user.login, admin_user_path(vehicle.user)
