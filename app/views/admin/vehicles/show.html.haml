- @page_title = t '.page_title', :reg_number => @vehicle.reg_number

- content_for :sidebar_actions do
  %li= link_to t('.action.reports'), reports_admin_vehicle_path(@vehicle)
  %li= link_to t('.action.map'), map_admin_vehicle_path(@vehicle)

%form
  - %w{ imei name reg_number }.each do |field_name|
    .clearfix
      %label= t('admin.vehicles.form.field.' + field_name)
      .input
        %span.uneditable-input= @vehicle.send(field_name)

  - if can? :manage, @vehicle
    .clearfix
      %label= t('admin.vehicles.form.field.user')
      .input
        %span.uneditable-input= @vehicle.user.login

  .clearfix
    %label= t('admin.vehicles.form.field.description')
    .input
      %span.uneditable-input= simple_format @vehicle.description

  .actions
    - if can? :edit, @vehicle
      = link_to t('.button.edit'), edit_admin_vehicle_path(@vehicle), :class => 'btn primary'
    = link_to t('.button.back'), admin_vehicles_path, :class => 'btn'
