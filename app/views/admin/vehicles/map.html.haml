- @page_title = t '.page_title', :reg_number => @vehicle.reg_number

- content_for :sidebar_actions do
  %li= link_to t('.action.details'), admin_vehicle_path
  %li= link_to t('.action.reports'), reports_admin_vehicle_path

- content_for :sidebar do
  %h4= t '.date_picker'
  %ul
    %li= link_to @selected_date, '#', :id => 'selectedDate', 'data-datepicker' => 'datepicker'

  %h4= t '.movements_list'
  - if @movements.count > 0
    %ul.movements-list
      %li= link_to t('.action.last_point'), '#', 'data-info' => last_point_info(@last_point).to_json, :class => 'ico-last-point'
      %li= link_to t('.action.show_all'), '#', :class => 'ico-show-all'
      %li= link_to t('.action.hide_all'), '#', :class => 'ico-hide-all'
      - @movements.each do |movement|
        %li= link_to timeframe(movement), "#", 'data-info' => movement_info(movement).to_json, :class => (movement.parking ? 'ico-parking' : 'ico-moving') + ' movement-info'
  - else
    = t('.no_data')

= javascript_include_tag "http://api-maps.yandex.ru/1.1/index.xml?key=#{@api_key}"
= javascript_include_tag "extensions/yandex-maps"
#map-canvas{ :style => "width: 100%; height: 0px;" }

