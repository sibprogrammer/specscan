- @page_title = t 'login.page_title'

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

  - form_field f, :login, :text_field, :required => true
  - form_field f, :password, :password_field, :required => true
  - form_field f, :remember_me, :check_box

  .actions
    = f.submit t('login.button_login'), :class => 'btn primary'

= render :partial => "devise/shared/links"
