.topbar
  .topbar-inner
    .container-fluid
      .brand= t 'project.title'
      %ul.nav
        - @menu.each do |menu|
          %li{ :class => (menu[:name] == @menu_section) ? 'active' : '' }= link_to t('menu.' + menu[:name]), menu[:link]
      - if @show_search
        %form.pull-left
          %input{ :type => 'text', :placeholder => t('menu.search') }
      - if user_signed_in?
        %p.pull-right= raw t('menu.logged_in', :login => link_to(current_user.login, 'profile'))
