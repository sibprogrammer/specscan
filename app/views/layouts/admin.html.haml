!!!
%html
  = render 'layouts/head'

  %body{ :class => page_class }
    = render 'layouts/topbar'

    .container-fluid
      .row-fluid
        = render 'layouts/sidebar'
        .content
          .page-header
            %h1= @page_title
          = render :partial => 'layouts/flash', :locals => { :flash => flash }
          = yield

    = render :partial => 'layouts/google_analytics'
